/* //最下方下拉提示 */
.attention{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 10px;
  color: blue;
}

.info{
  display: flex;
  position: relative;
  flex-direction: row;
  margin: 5px 5px;

}

.userImage2{
  height: 20px;
  width: 20px;
}

.name{
  margin: 0 5px;
}

.text{
  margin: 5px;
}
.time1{
  float: right;
  font-size: 7pt;
  margin-right: 10rpx;
}

.reply{
  color: #61ada3;
  font-size: 10px;
  top: 10px;

}

.ask {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
}
 
.input {
  width: 600rpx;
  height: 60rpx;
  border: 1rpx solid #f1f1f1;
  margin: 12rpx 0rpx 12rpx 20rpx;
  border-radius: 30rpx;
  background: #f1f5fc;
  font-size: 30rpx;
  text-align: center;
}
 
.button {
  background: #647f96;
  color: white;
  border-radius: 30rpx;
  font-size: 30rpx;
  width: 130rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 12rpx 20rpx;
}

.comment{
  display: flex;
  flex-direction: row;
  
}

